<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--When Button is not enabled -->
    <item android:state_enabled="false" android:drawable="@color/grey_coal_300" />
    <!--When Button is in pressed state -->
    <item android:state_pressed="true" android:drawable="@color/grey_coal_300" />
    <!--When Button is in selected state -->
    <item android:state_selected="true" android:drawable="@color/grey_coal_300" />
    <!--Default Background Color -->
    <item android:drawable="@color/grey_coal_300" />
</selector>