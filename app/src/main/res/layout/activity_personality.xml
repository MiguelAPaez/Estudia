<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Personality"
    android:background="@drawable/gradient_list"
    android:id="@+id/personalityLayout">

    <LinearLayout
        tools:ignore="MissingConstraints"
        style="@style/LinearLayoutBase">

        <ScrollView
            android:id="@+id/scrollViewPersonality"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/WightHeightBase">

            <LinearLayout style="@style/LinearLayoutAlignItems">

                <ImageView
                    android:id="@+id/personalityImage"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_marginTop="50dp"
                    android:src="@drawable/artista" />

                <TextView
                    android:id="@+id/personalityDescription"
                    android:text="@string/artista_description"
                    android:textColor="@color/white_400"
                    android:textAlignment="center"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="80dp"
                    style="@style/TitleMediumTextView" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <Button
        android:id="@+id/nextButtonPersonality"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/next_mustard_rounded_button"
        android:textSize="50sp"
        android:textAllCaps="false"
        android:gravity="center|center_vertical"
        android:textColor="@color/white_400"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>