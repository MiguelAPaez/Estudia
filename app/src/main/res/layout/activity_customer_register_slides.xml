<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerRegisterSlides">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/slideViewPagerCustomRegister"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/backButtonCustomerRegisterSlide"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/back_mustard_rounded_button"
        android:textSize="50sp"
        android:textAllCaps="false"
        android:gravity="center|center_vertical"
        android:textColor="@color/white_400"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/nextButtonCustomerRegisterSlide"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/next_mustard_rounded_button"
        android:textSize="50sp"
        android:textAllCaps="false"
        android:gravity="center|center_vertical"
        android:textColor="@color/white_400"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>