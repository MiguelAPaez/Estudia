<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:elevation="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal"
        android:background="@drawable/vertical_programs_bg"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageIdVerticalProgram"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:src="@drawable/android"
            android:layout_marginStart="10dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameIdVerticalProgram"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="Nombre" />

            <TextView
                android:id="@+id/modalityIdVerticalProgram"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="Modalidad" />

            <TextView
                android:id="@+id/codeIdVerticalProgram"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="12sp"
                android:textAlignment="center"
                android:text="CÃ³digo: " />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>