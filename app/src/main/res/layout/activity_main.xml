<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <View
        android:id="@+id/top_view_main"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bg_main_view" />

    <ScrollView
        style="@style/WightHeightBase"
        tools:ignore="ScrollViewCount"
        android:id="@+id/scrollViewMain"
        android:layout_below="@+id/top_view_main"
        android:layout_marginTop="-80dp">

        <LinearLayout style="@style/LinearLayoutBase">

            <GridLayout style="@style/GridLayoutCardViewMain">

                <androidx.cardview.widget.CardView
                    android:id="@+id/nextRegister"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="12dp"
                    android:layout_row="1"
                    android:layout_column="0"
                    style="@style/CardViewMain">

                    <LinearLayout style="@style/LinearLayoutHorizontalMatchParent">

                        <ImageView
                            android:src="@drawable/register_2"
                            style="@style/ImageCardViewMain" />

                        <TextView
                            android:text="@string/next_register_title"
                            style="@style/TitleTextCardViewMain" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/personalitySurveyButton"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="12dp"
                    android:layout_row="2"
                    android:layout_column="0"
                    style="@style/CardViewMain">

                    <LinearLayout style="@style/LinearLayoutHorizontalMatchParent">

                        <ImageView
                            android:src="@drawable/test_man"
                            style="@style/ImageCardViewMain" />

                        <TextView
                            android:text="@string/personality_survey_title"
                            style="@style/TitleTextCardViewMain" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/programsButton"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="12dp"
                    android:layout_row="3"
                    android:layout_column="0"
                    style="@style/CardViewMain">

                    <LinearLayout style="@style/LinearLayoutHorizontalMatchParent">

                        <ImageView
                            android:src="@drawable/results_1"
                            style="@style/ImageCardViewMain" />

                        <TextView
                            android:text="@string/programs_title"
                            style="@style/TitleTextCardViewMain" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:id="@+id/profileButton"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="12dp"
                    android:layout_row="4"
                    android:layout_column="0"
                    style="@style/CardViewMain">

                    <LinearLayout style="@style/LinearLayoutHorizontalMatchParent">

                        <ImageView
                            android:src="@drawable/user_1"
                            style="@style/ImageCardViewMain" />

                        <TextView
                            android:text="@string/profile_tile"
                            style="@style/TitleTextCardViewMain" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/buttonLogOut"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="12dp"
                    android:layout_row="5"
                    android:layout_column="0"
                    style="@style/CardViewMain">

                    <LinearLayout style="@style/LinearLayoutHorizontalMatchParent">

                        <ImageView
                            android:src="@drawable/logout"
                            style="@style/ImageCardViewMain" />

                        <TextView
                            android:text="@string/logout_title"
                            style="@style/TitleTextCardViewMain" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </GridLayout>
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="311dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="53dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/welcomeMessageMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dashboard"
        android:textColor="@color/white_300"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" />
</RelativeLayout>